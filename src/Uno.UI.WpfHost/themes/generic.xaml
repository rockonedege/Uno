<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:cfe="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
                    xmlns:local="clr-namespace:Uno.UI.WpfHost">

	<Style TargetType="local:UnoHostView">
		<Style.Setters>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="local:UnoHostView">
						<Border BorderThickness="1" BorderBrush="Red">
							<cfe:ChromiumWebBrowser x:Name="PART_Browser" />
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style.Setters>
	</Style>
    
</ResourceDictionary>
