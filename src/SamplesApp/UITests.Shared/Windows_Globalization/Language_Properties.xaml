<UserControl
    x:Class="UITests.Shared.Windows_Globalization.Language_Properties"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel>
		<Button Content="Refresh" Click="Refresh_Click" />
		<TextBlock>
			<Run FontWeight="Bold" Text="CurrentLanguageInputTag: " />
			<Run x:Name="CurrentLanguageInputTagRun" />
		</TextBlock>
		<TextBox TextChanged="TextChanged" TextChanging="TextChanging" PlaceholderText="Write in this field and property will refresh automatically" />
	</StackPanel>
</UserControl>
