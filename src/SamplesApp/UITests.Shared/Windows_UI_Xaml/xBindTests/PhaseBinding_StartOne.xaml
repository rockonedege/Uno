<Page
    x:Class="Uno.UI.Samples.Content.UITests.XBind.PhaseBinding_StartOne"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Uno.UI.Samples.Content.UITests.XBind"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<TextBlock Grid.Row="0" Text="There should be three lines per template"/>
		<ListView Grid.Row="1" ItemsSource="{x:Bind MyItems}">
			<ListView.ItemTemplate>
				<DataTemplate x:DataType="local:MyItem">
					<StackPanel>
						<TextBlock Text="{x:Bind Value01}" x:Phase="1" />
						<TextBlock Text="{x:Bind Value02}" x:Phase="2" />
						<TextBlock Text="{x:Bind Value02}" x:Phase="3" />
					</StackPanel>
				</DataTemplate>
			</ListView.ItemTemplate> 
		</ListView>
	</Grid>
</Page>
