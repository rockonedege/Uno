<UserControl
	x:Class="SamplesApp.Windows_UI_Xaml_Shapes.PathTestsControl.Path_Arc"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	d:DesignHeight="300"
	d:DesignWidth="400">

	<ScrollViewer>

		<StackPanel>

			<Grid>
				<Path Data="M40,20  A30,30 0 0,0 70,70"
					  Stroke="#cccc00"
					  StrokeThickness="2" />
				<Path Data="M40,20  A30,30 0 1,0 70,70"
					  Stroke="#ff0000"
					  StrokeThickness="2" />
				<Path Data="M40,20  A30,30 0 1,1 70,70"
					  Stroke="#00ff00"
					  StrokeThickness="2" />
				<Path Data="M40,20  A30,30 0 0,1 70,70"
					  Stroke="#0000ff"
					  StrokeThickness="2" />
			</Grid>

			<!-- https://www.w3.org/TR/SVG/paths.html -->
			<Grid>
				<Path Data="M200,200 h-150 a150,150 0 1,0 150,-150 z"
					  Fill="Red"
					  Stroke="Blue"
					  StrokeThickness="5" />
				<Path Data="M175,175 v-150 a150,150 0 0,0 -150,150 z"
					  Fill="Yellow"
					  Stroke="Blue"
					  StrokeThickness="5" />
			</Grid>

			<TextBlock Text="Center computation of the following Arc implies possible sqrt of a negative number" />
			<Grid>
				<Path Data="M6.2 5.63a4.89 4.89 0 1 1 9.78 0z"
					  Fill="Green"
					  Stroke="Yellow" />
			</Grid>

		</StackPanel>

	</ScrollViewer>

</UserControl>
