<UserControl
	x:Class="UITests.Shared.Windows_UI_Xaml_Input.RoutedEvents.RoutedEvent_FocusControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Grid Background="Moccasin">
		<TextBlock>
			Children:
			<LineBreak/>
			<Run x:Name="txtChildren" />
		</TextBlock>
		<Button HorizontalAlignment="Left" VerticalAlignment="Bottom" x:Name="btnIn1">(btnIn1) Focus this</Button>
		<Button HorizontalAlignment="Right" VerticalAlignment="Bottom" x:Name="btnIn2">(btnIn2) Focus this</Button>
	</Grid>
</UserControl>
