<Page
	x:Class="UITests.Shared.Windows_UI_Xaml_Input.RoutedEvents.RoutedEvent_Focus"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Input.RoutedEvents"
	x:Name="focusPage">

	<Grid>
		<TextBlock>
			Root:
			<LineBreak/>
			<Run x:Name="txtRoot" />
		</TextBlock>

		<local:RoutedEvent_FocusControl
			Opacity="0.85"
			Width="300"
			Height="300" />

		<Button HorizontalAlignment="Left" VerticalAlignment="Bottom" x:Name="btnOut">(btnOut) Focus this</Button>
	</Grid>
</Page>
