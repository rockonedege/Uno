<UserControl
    x:Class="Uno.UI.Samples.Content.UITests.CommandBar.CommandBar_Flyout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Uno.UI.Samples.Content.UITests.CommandBar"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">


	<StackPanel>

		<!-- TODO: Binding -->
		<CommandBar Content="Title">
			<AppBarButton Content="MenuFlyout">
				<AppBarButton.Flyout>
					<MenuFlyout>
						<MenuFlyoutItem Text="Item1" />
						<MenuFlyoutItem Text="Item2" />
						<MenuFlyoutItem Text="Item3" />
						<MenuFlyoutItem Text="Item4" />
						<MenuFlyoutItem Text="Item5" />
					</MenuFlyout>
				</AppBarButton.Flyout>
			</AppBarButton>
			<AppBarButton Content="Flyout">
				<AppBarButton.Flyout>
					<Flyout>
						<Border Height="100"
										Width="100"
										Background="Red" />
					</Flyout>
				</AppBarButton.Flyout>
			</AppBarButton>
		</CommandBar>

	</StackPanel>

</UserControl>
