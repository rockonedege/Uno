<Page x:Class="Uno.UI.Samples.Content.UITests.CommandBar.BackGesture.BackGesture_Normal"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  mc:Ignorable="d">

	<Grid Background="Blue">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<CommandBar Content="Normal" />


		<TextBlock Text="Here the CommandBar is visible. The back gesture SHOULD work."
				   HorizontalAlignment="Center"
				   VerticalAlignment="Center"
				   TextWrapping="Wrap"
				   Grid.Row="1" />

		<Button x:Name="GoBack"
				Content="Go back"
				Click="GoBack_Click"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Grid.Row="2" />

	</Grid>
</Page>
