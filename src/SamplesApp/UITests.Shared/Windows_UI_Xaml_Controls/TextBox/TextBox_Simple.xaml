<UserControl
	x:Class="Uno.UI.Samples.Content.UITests.TextBoxControl.TextBox_Simple"
	 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	 mc:Ignorable="d"
	 d:DesignHeight="300"
	 d:DesignWidth="400">

	<StackPanel>

		<TextBox PlaceholderText="Normal"
				 Margin="10" />
		<TextBox x:Name="Focused"
				 PlaceholderText="Focused"
				 Margin="10" />
		<TextBox PlaceholderText="Disabled"
				 IsEnabled="False"
				 Margin="10" />

	</StackPanel>
</UserControl>
