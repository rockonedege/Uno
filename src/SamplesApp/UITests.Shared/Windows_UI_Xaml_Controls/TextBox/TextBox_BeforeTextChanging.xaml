<UserControl
	x:Class="UITests.Shared.Windows_UI_Xaml_Controls.TextBoxTests.TextBox_BeforeTextChanging"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	d:DesignHeight="300"
	d:DesignWidth="400">

	<StackPanel>
		<TextBox x:Name="BeforeTextBox"
				 MaxLength="20"
				 PlaceholderText="only permits the letter e..."
				 BeforeTextChanging="BeforeTextBox_BeforeTextChanging"
				 IsSpellCheckEnabled="False"
				 Margin="5" />
		<TextBlock x:Name="BeforeTextBlock" Text="{Binding ElementName=BeforeTextBox, Path=Text}" />
	</StackPanel>
</UserControl>
