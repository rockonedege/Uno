<UserControl
	x:Class="Uno.UI.Samples.Content.UITests.TextBoxControl.TextBox_Selection"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:controls="using:Uno.UI.Samples.Controls"
	d:DesignHeight="300"
	d:DesignWidth="400">

	<StackPanel >
		<TextBox SelectionStart="{Binding [SelectionStart]}" SelectionLength="{Binding [SelectionLength]}"/>
		<TextBox PlaceholderText="SelectionStart" />
		<TextBox PlaceholderText="SelectionLength" />
		<Button Content="Update" Command="{Binding [Update]}" />
	</StackPanel>

</UserControl>
