<UserControl
	x:Class="SamplesApp.Windows_UI_Xaml_Controls.ListView.ListView_Last_Item_Large"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	d:DesignHeight="300"
	d:DesignWidth="400">
	
	<StackPanel>

		<TextBlock TextWrapping="Wrap" Text="Expected behavior:" />
		<TextBlock TextWrapping="Wrap" Text="1. Notice that the ListView (yellow) is narrow and roughly matches the width of the numbers." />
		<TextBlock TextWrapping="Wrap" Text="2. Scroll all the way to the bottom of the list." />
		<TextBlock TextWrapping="Wrap" Text="3. Notice that the ListView (yellow) is larger and matches the size of the last number." />
		
		<ListView x:Name="MyListView"
				  HorizontalAlignment="Left"
				  Background="Yellow"
				  Height="200" />

	</StackPanel>
	
</UserControl>
