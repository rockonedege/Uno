<Page x:Class="Uno.UI.Samples.UITests.BorderTestsControl.Border_CornerRadius_Alignments"
	  xmlns:controls="using:Uno.UI.Samples.Controls"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:Uno.UI.Samples.UITests.BorderTestsControl"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:ios="http://uno.ui/ios"
	  xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:android="http://uno.ui/android"
	  mc:Ignorable="d ios android">

	<controls:SampleControl SampleDescription="CornerRadius Alignments">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				<Grid Background="Red">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*" />
						<ColumnDefinition Width="*" />
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>

					<Rectangle Grid.ColumnSpan="2"
							   Grid.RowSpan="2"
							   Fill="White"
							   Margin="10" />

					<Rectangle Grid.ColumnSpan="2"
							   Grid.RowSpan="2"
							   Fill="Red"
							   Width="150"
							   Height="150"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center" />
					
					<Rectangle Grid.ColumnSpan="2"
							   Grid.RowSpan="2"
							   Fill="#40FFFFFF"
							   Width="148"
							   Height="148"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center" />

					<!-- This rectangle should not be visible -->
					<Border Grid.ColumnSpan="2"
							Grid.RowSpan="2"
							Width="150"
							Height="150"
							CornerRadius="75"
							Background="Black"
							BorderThickness="0"
							HorizontalAlignment="Center"
							VerticalAlignment="Center" />

					<Border Grid.ColumnSpan="2"
							Grid.RowSpan="2"
							Width="150"
							Height="150"
							CornerRadius="75"
							Background="Green"
							BorderThickness="10"
							BorderBrush="Yellow"
							HorizontalAlignment="Center"
							VerticalAlignment="Center" />

					<Border Width="100"
							Height="50"
							Margin="10"
							CornerRadius="25"
							Background="Green"
							BorderThickness="5"
							BorderBrush="Blue"
							HorizontalAlignment="Left"
							VerticalAlignment="Top" />

					<Border Grid.Column="1"
							Width="50"
							Height="100"
							Margin="10"
							CornerRadius="25"
							Background="Green"
							BorderThickness="5"
							BorderBrush="Blue"
							HorizontalAlignment="Right"
							VerticalAlignment="Top" />

					<Border Grid.Row="1"
							Width="50"
							Height="100"
							Margin="10"
							CornerRadius="25"
							Background="Green"
							BorderThickness="5"
							BorderBrush="Blue"
							HorizontalAlignment="Left"
							VerticalAlignment="Bottom" />

					<Border Grid.Column="1"
							Grid.Row="1"
							Width="100"
							Height="50"
							Margin="10"
							CornerRadius="25"
							Background="Green"
							BorderThickness="5"
							BorderBrush="Blue"
							HorizontalAlignment="Right"
							VerticalAlignment="Bottom" />
				</Grid>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</Page>
