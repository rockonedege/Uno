<UserControl
    x:Class="UITests.Shared.Windows_UI_Xaml_Controls.GridTestsControl.Grid_MinWidth_MaxWidth"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.GridTestsControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
		<StackPanel>
			<Slider x:Name="GridWidthSlider"
					Width="450"
					HorizontalAlignment="Left"
					Margin="50,0,0,0"
					Minimum="50"
					Maximum="500"
					Value="350" />
			<Grid Width="{Binding ElementName=GridWidthSlider, Path=Value}"
				  x:Name="Grid1"
				  Height="80"
				  Background="Beige"
				  VerticalAlignment="Top"
				  HorizontalAlignment="Left">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"
									  MaxWidth="60" />
					<ColumnDefinition Width="*"
									  MaxWidth="100" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<Border HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Background="LightCoral"
						Grid.Column="0">
					<TextBlock Text="MxW=60" />
				</Border>
				<Border HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Background="LightBlue"
						Grid.Column="1">
					<TextBlock Text="MxW=100" />
				</Border>
				<TextBlock Text="Third"
						   Grid.Column="2" />
			</Grid>
			<Grid Width="{Binding ElementName=GridWidthSlider, Path=Value}"
				  Height="80"
				  Margin="0,50,0,0"
				  Background="Beige"
				  VerticalAlignment="Top"
				  HorizontalAlignment="Left">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"
									  MaxWidth="60" />
					<ColumnDefinition Width="*"
									  MinWidth="100" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<Border HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Background="Lavender"
						Grid.Column="0">
					<TextBlock Text="MxW=60" />
				</Border>
				<Border HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Background="LightGreen"
						Grid.Column="1">
					<TextBlock Text="MinW=100" />
				</Border>
				<TextBlock Text="Auto"
						   Grid.Column="2" />
			</Grid>
			<Grid Width="{Binding ElementName=GridWidthSlider, Path=Value}"
				  Height="80"
				  Margin="0,50,0,0"
				  Background="Beige"
				  VerticalAlignment="Top"
				  HorizontalAlignment="Left">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"
									  MinWidth="100" />
					<ColumnDefinition Width="*"
									  MaxWidth="60" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<Border HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Background="LightGreen"
						Grid.Column="0">
					<TextBlock Text="MinW=100" />
				</Border>
				<Border HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Background="Lavender"
						Grid.Column="1">
					<TextBlock Text="MxW=60" />
				</Border>
				<TextBlock Text="Auto"
						   Grid.Column="2" />
			</Grid>
			<Grid Width="{Binding ElementName=GridWidthSlider, Path=Value}"
				  Height="80"
				  Margin="0,50,0,0"
				  Background="Beige"
				  VerticalAlignment="Top"
				  HorizontalAlignment="Left">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"
									  MinWidth="100" />
					<ColumnDefinition Width="*"
									  MaxWidth="60" />
					<ColumnDefinition Width="Auto"
									  MaxWidth="20" />
				</Grid.ColumnDefinitions>
				<Border HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Background="LightGreen"
						Grid.Column="0">
					<TextBlock Text="MinW=100" />
				</Border>
				<Border HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Background="Lavender"
						Grid.Column="1">
					<TextBlock Text="MxW=60" />
				</Border>
				<TextBlock Text="A MxW=20"
						   Grid.Column="2" />
			</Grid>
			<Grid Width="{Binding ElementName=GridWidthSlider, Path=Value}"
				  Height="80"
				  Margin="0,50,0,0"
				  Background="Beige"
				  VerticalAlignment="Top"
				  HorizontalAlignment="Left">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"
									  MinWidth="30" />
					<ColumnDefinition Width="*"
									  MaxWidth="60" />
					<ColumnDefinition Width="Auto"
									  MinWidth="150" />
				</Grid.ColumnDefinitions>
				<Border HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Background="LightGreen"
						Grid.Column="0">
					<TextBlock Text="MinW=30" />
				</Border>
				<Border HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Background="Lavender"
						Grid.Column="1">
					<TextBlock Text="MxW=60" />
				</Border>
				<TextBlock Text="A MinW=150"
						   Grid.Column="2" />
			</Grid>
		</StackPanel>
    </Grid>
</UserControl>
