<UserControl
    x:Class="Uno.UI.Samples.Content.UITests.ButtonTestsControl.Button_Opacity_Automated"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Uno.UI.Samples.Content.UITests.ButtonTestsControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

	<Grid>
		<StackPanel VerticalAlignment="Center"
								HorizontalAlignment="Center">

			<!-- Click Count value -->
			<TextBlock x:Name="TotalClicks"
					   Text="0"
					   FontSize="20"
					   HorizontalAlignment="Center" />

			<!-- Add button -->
			<Button x:Name="ButtonToChangeOpacity"
							Content="Add"
							Click="AddButtonClick"
							Background="Black"
							Foreground="Blue"
							HorizontalAlignment="Center"
							VerticalAlignment="Center"
							IsEnabled="True"
							Margin="0,32,0,0"/>

			<!-- Label : Enter a number -->
			<TextBlock Text="Enter an opacity value :"
					   FontSize="20"
					   HorizontalAlignment="Center" />

			<!-- TextBox Value of opacity  -->
			<TextBox x:Name="ValueOfOpacity"
					   Text="1"
						 Width="200"
					   FontSize="20"
					   HorizontalAlignment="Center"/>

			<!-- Apply button -->
			<Button x:Name="ApplyOpacityButton"
					Content="Apply"
					Click="ApplyButtonClick"
					HorizontalAlignment="Center"
					IsEnabled="True"
					Margin="0,32,0,0" />

		</StackPanel>
	</Grid>
</UserControl>
