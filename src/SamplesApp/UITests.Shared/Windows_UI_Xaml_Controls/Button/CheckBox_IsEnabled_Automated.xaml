<UserControl x:Class="Uno.UI.Samples.Content.UITests.ButtonTestsControl.CheckBox_IsEnabled_Automated"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:Uno.UI.Samples.Content.UITests.ButtonTestsControl"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

	<StackPanel VerticalAlignment="Center"
			HorizontalAlignment="Center"
			Width="280">

		<!-- Checkbox State -->
		<StackPanel Orientation="Horizontal"
					HorizontalAlignment="Left">

			<!-- Label -->
			<TextBlock Text="MyCheckBox.IsChecked ="
					   FontSize="20" />

			<!-- Value -->
			<TextBlock x:Name="CheckBoxIsCheckedState"
					   FontSize="20"
					   Margin="4,0,0,0" />
		</StackPanel>

		<!-- My Checkbox -->
		<CheckBox x:Name="MyCheckBox"
				  Content="My Checkbox"
				  Margin="0,24,0,8"
				  Click="MyCheckBox_Click"/>

		<!-- My Checkbox Disabler -->
		<CheckBox x:Name="MyCheckBoxDisabler"
				  Content="Disable My Checkbox"
				  Click="MyCheckBoxDisabler_Click"/>

	</StackPanel>
</UserControl>
