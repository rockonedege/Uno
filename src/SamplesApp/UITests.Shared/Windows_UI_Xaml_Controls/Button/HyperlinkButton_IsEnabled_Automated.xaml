<UserControl x:Class="Uno.UI.Samples.Content.UITests.ButtonTestsControl.HyperlinkButton_IsEnabled_Automated"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:Uno.UI.Samples.Content.UITests.ButtonTestsControl"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
	<Grid>

		<StackPanel VerticalAlignment="Center"
					HorizontalAlignment="Center">

			<!-- Click Count value -->
			<TextBlock x:Name="TotalClicks"
					   Text="0"
					   FontSize="60"
					   HorizontalAlignment="Center" />

			<!-- Click Count title -->
			<TextBlock Text="Total Clicks"
					   FontSize="40"
					   HorizontalAlignment="Center" />

			<!-- Click button  -->
			<HyperlinkButton x:Name="ClickingButton"
							 Content="HyperlinkButton"
							 Click="IncreaseClick"
							 HorizontalAlignment="Center"
							 IsEnabled="True"
							 Margin="0,32,0,0"/>

			<!-- Disable/Enable Click -->
			<CheckBox x:Name="ToggleClickingButtonIsEnable"
					  Content="Enable Click"
					  HorizontalAlignment="Center"
					  IsChecked="{Binding IsEnabled,ElementName=ClickingButton, Mode=TwoWay}"
					  Margin="0,16,0,0" />
		</StackPanel>
	</Grid>
</UserControl>