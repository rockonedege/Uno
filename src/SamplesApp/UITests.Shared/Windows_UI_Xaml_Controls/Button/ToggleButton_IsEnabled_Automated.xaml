<UserControl x:Class="Uno.UI.Samples.Content.UITests.ButtonTestsControl.ToggleButton_IsEnabled_Automated"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:Uno.UI.Demo.Samples"
			 xmlns:android="http://uno.ui/android"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="android">

	<StackPanel VerticalAlignment="Center"
				HorizontalAlignment="Center"
				Width="310">

		<!-- ToggleButton State -->
		<StackPanel Orientation="Horizontal"
					HorizontalAlignment="Left">

			<!-- Label -->
			<TextBlock Text="MyToggleButton.IsChecked ="
					   FontSize="20" />

			<!-- Value -->
			<TextBlock x:Name="ToggleButtonIsCheckedState"
					   FontSize="20"
					   Margin="4,0,0,0" />
		</StackPanel>

		<!-- My ToggleButton -->
		<ToggleButton x:Name="MyToggleButton"
					  Content="My ToggleButton"
				  Margin="0,24,0,8"
				  Click="MyToggleButton_Click"/>

		<!-- My ToggleButton Disabler -->
		<ToggleButton x:Name="MyToggleButtonDisabler"
					  Content="Disable My ToggleButton"
					  Click="MyToggleButtonDisabler_Click"/>

	</StackPanel>
</UserControl>
